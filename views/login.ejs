<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OneLoveW</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">


    <link rel="stylesheet" href="syleLogin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css">
</head>
<body>
    <div>
    <a href="/" style=" cursor: default;  position: absolute;width: 100%; height: 80px; background-color: #CCC5F7;display: flex ;align-items: center ; padding-left: 40px ;"><img src="./image/arrow.png " style="cursor: pointer;" width="50px"  alt=""></a>
</div>
    <main>
        <div class="left-box">
            <div class="left-box-info">
                <h3 style="margin-bottom: 20px;">Login</h3>
                <form action="/login" method="POST">
                    <div class="form-control">
                        <label for="email" style="margin: 5px;">Email address or user name</label>
                        <input type="text" name="email" placeholder="" required>
                    </div>
                    <div class="form-control">
                        <label for="password"style="margin: 5px;">Password</label>
                        <input type="password" name="password" placeholder="" required>
                    </div>
                    <div class="check-box">
                        <input type="checkbox" name="rememberMe">
                        <span>Remember me <a href=""></a></span>
                    </div>
                    <br>
                    <p style="font-size: 12px;">By continuing, you agree to the <a href="" style="color: black;">Terms of use</a> and <a href="" style="color: black;">Privacy Policy.</a></p>
                    <div class="sign-up">
                        <button type="submit">Log in</button>
                    </div>
                    <p style="justify-content:center; text-align: center; font-size: 10px; color: black; margin: 15px;"><a href="" style="color: black;">Forget your password</a></p>
                    <p style="justify-content:center; text-align: center; font-size: 10px; color: black;">Donâ€™t have an account? <a href="/register">Sign up</a></p>
                    <div class="divider">
                        <p style="font-size: 13px; padding-left: 20px; padding-right: 20px;">Or continue with</p>
                    </div>
                    <div class="form-social-btn">
                        <a href="/register" class="google-login"><i class="fa fa-google" aria-hidden="true"></i> Sign in with Google</a>
                        <a href="/register" class="apple-login"><i class="fa fa-apple" aria-hidden="true"></i> Sign in with Apple</a>
                    </div>
                </form>
            </div>
        </div>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const urlParams = new URLSearchParams(window.location.search);
            const success = urlParams.get('success');
            const error = urlParams.get('error');
            const message = urlParams.get('message');

            if (success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: message,
                });
            } else if (error) {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: message,
                });
            }
        });
    </script>
</body>
</html>