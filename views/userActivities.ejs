<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Activities</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="./styleUserActivities.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&display=swap">

</head>
<body>

    <div>
        <a href="/" style="cursor: default; position: absolute; width: 100%; height: 80px; background-color: #CCC5F7; display: flex; align-items: center; padding-left: 40px;">
            <img src="./image/arrow.png" style="cursor: pointer;" width="50px" alt="">
        </a>
    </div>

    <div class="container" style="padding-top: 100px;">
        <div class="top-box">
            <h1 style="margin-bottom: 30px; padding: 20px;">Your Activities</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Points</th>
                        <th>Description</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    <% activities.forEach(activity => { %>
                        <tr>
                            <td><%= activity.name %></td>
                            <td><%= activity.points %></td>
                            <td><%= activity.description %></td>
                            <td><%= activity.activityDate.toISOString().split('T')[0] %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
</body>
</html>
